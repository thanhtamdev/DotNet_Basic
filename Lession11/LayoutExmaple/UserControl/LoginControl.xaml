<UserControl x:Class="LayoutExmaple.UserControl.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LayoutExmaple.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
    
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Margin="25" Grid.Row="0" Grid.Column="0">User name:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="25"></TextBox>

        <Label Margin="25" Grid.Row="1" Grid.Column="0">Password:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="25"></TextBox>
    </Grid>
</UserControl>
