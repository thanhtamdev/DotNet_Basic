<Window x:Class="LayoutExmaple.BaiTap1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutExmaple"
        mc:Ignorable="d"
        Title="Bài tập số 1" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Margin="10, 50, 0, 0">Full name:</Label>
        <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Width="300" Height="30" Margin="10, 50"></TextBox>
        <Button x:Name="btnXacNhan" Click="btnXacNhan_Click" Grid.Row="1" Grid.Column="1" Margin="10, 50, 200, 50">Xác nhận</Button>
    </Grid>
</Window>
