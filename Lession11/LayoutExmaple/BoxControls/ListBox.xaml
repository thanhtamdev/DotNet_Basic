<Window x:Class="LayoutExmaple.BoxControls.ListBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutExmaple.BoxControls"
        mc:Ignorable="d"
        Title="ListBox" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label>Chọn tỉnh thành</Label>
        <ListBox x:Name="lstTinhThanh" Width="250" HorizontalAlignment="Left" SelectedIndex="0">
            <ListBoxItem>Hà Nội</ListBoxItem>
            <ListBoxItem>Hà Nam</ListBoxItem>
            <ListBoxItem>Ninh Bình</ListBoxItem>
            <ListBoxItem>Bắc Ninh</ListBoxItem>
            <ListBoxItem>Tp. Hồ Chí Minh</ListBoxItem>
            <ListBoxItem>Cần Thơ</ListBoxItem>
        </ListBox>
    </StackPanel>
</Window>
