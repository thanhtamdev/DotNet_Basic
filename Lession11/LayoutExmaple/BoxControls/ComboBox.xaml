        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutExmaple.BoxControls"
        mc:Ignorable="d"
        Title="ComboBox" Height="300" Width="350">
    <StackPanel Margin="20">
        <Label>Quê quán:</Label>
        <ComboBox x:Name="cboQueQuan" Width="250" HorizontalAlignment="Left" SelectedIndex="0">
            <ComboBoxItem>Ha Noi</ComboBoxItem>
            <ComboBoxItem>Ninh Binh</ComboBoxItem>
            <ComboBoxItem>Ha Nam</ComboBoxItem>
            <ComboBoxItem>Tp. HCM</ComboBoxItem>
            <ComboBoxItem>Da Nang</ComboBoxItem>
